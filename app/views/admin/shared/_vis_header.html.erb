<header class="vis">
  <div class="inner">

    <div class="header_content">

      <div class="vis_navigation">
        <nav>
          <%= link_to "Map",  "#/map",   :class => "smaller strong tab" %>
          <%= link_to "Table", "#/table", :class => "smaller strong tab hidden" %>

        </nav>
      </div>

      <div class="left">
        <ul class="actions">
          <li><%= link_to "Back", CartoDB.path(self, 'root'), :class => "back" %></li>
          <li><h1><%= link_to @visualization.name, "#/change-title", :class => "title" %></h1></li>
        </ul>
      </div>

      <div class="right">
        <ul class="options">
          <li><%= link_to "Actions", "#/options", :class => "dropdown options" %></li>
          <li><a class="rounded share" href="#/visualize"><span>VISUALIZE</span></a></li>
        </ul>
      </div>
    </div>

    <div class="sync_status"></div>
    <div class="globalerror"></div>
  </div>
</header>
